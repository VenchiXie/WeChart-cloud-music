/* pages/video/video.wxss */
page {
    background-color: #f5f5f7;
}

.videoContainer .header {
    display: flex;
}


.videoContainer .header .search {
    border:1rpx solid #eee;

    flex: 1;
    margin:20rpx 50rpx;
    height: 60rpx;
    font-size: 26rpx; 
    text-align: center;
    line-height: 60rpx;
    color: #939594;
    background-color: #edefee;
    border-radius: 30rpx;
}

.navScroll {
    display: flex;
    white-space: nowrap;
    height: 75rpx;
    font-size: 25rpx;
    color:#f9ccbe;
    background-color: #dc2c1f;
}

.navItem {
    margin:20rpx 16rpx 0rpx;
}

.navContent {
    padding: 5rpx 25rpx;
    border-radius: 25rpx;
    line-height: 38rpx;
}

.active {
    color:white;
    background-color: #d03c31;
}

.videoItemContainer{
    display: flex;
    flex-wrap: wrap;
    margin: 0 30rpx;
    justify-content: space-between;
    height: 800rpx;
}

.videoItem {
    display: flex;
    flex-direction: column;
    width: 48%;
    height: 280rpx;
    overflow: hidden;
    margin-bottom: 15px;
    background-color: white;
    border-radius: 20rpx;
    border: 1px solid #eee;
}

.videoItem image {
    width: 100%;
    height: 190rpx;
    /* height: 300rpx; */
    /* height: 100%; */
}

.textContainer {
    padding: 10rpx 20rpx 10rpx;
    font-size: 26rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
}

.videoListSwiper{
    /* height: 1000rpx; */
    height: calc(100vh - 176rpx);
}

.videoItemContainerScroll{
    /* css3 calc：可以动态计算css的宽高 */
    /* 视口单位: vh  vw  1vh=1%的视口高度
                        1wh=1%的视口宽度 */
/* 注意书写要求, calc函数要求: */
/* 运算符号前后必须有空格 */
/* 函数的括号内部前后不能有空格, 即calc(stat)的括号内和stat之间不能由空格 */
    height: 100%;
}

.tip{
    width: 100%;
    margin-top:50rpx;
    font-size: 28rpx;
    color:#aaa;
    text-align: center;
}

.loadingContainer {
    width: 100%;
    text-align: center;
    margin:20rpx 0 140rpx;
}